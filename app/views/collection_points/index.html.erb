<div class="container">
  <% if notice.present? %>
    <div class="row">
      <div class="col s12">
        <div class="card-panel green lighten-2">
          <span class="white-text"><%= notice %></span>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Collection Points</span>
        </div>
      </div>
      <table class="striped responsive-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Contact</th>
            <th>Website</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @collection_points.each do |collection_point| %>
            <tr id="<%= dom_id collection_point %>">
              <td><%= collection_point.name %></td>
              <td><%= collection_point.address %></td>
              <td><%= collection_point.contact %></td>
              <td><%= collection_point.website %></td>
              <td class="right-align">
                <%= link_to 'Show', collection_point, class: "btn" %>
                <%= link_to 'Edit', edit_collection_point_path(collection_point), class: "btn" %>
                <%= link_to 'Destroy', collection_point, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn red darken-1" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br/>
      <%= link_to "New", new_collection_point_path, class: "btn" %>
    </div>
  </div>
</div>
