  <%= form_with(model: collection_point) do |form| %>
  <% if collection_point.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(collection_point.errors.count, "error") %> prohibited this collection_point from being saved:</h2>
      <ul>
        <% collection_point.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col s12 m8 offset-m2">
      <div class="input-field">
        <%= form.label :name, class: ('active' if collection_point.name.present?) %>
        <%= form.text_field :name, class: "validate" %>
      </div>
      <div class="input-field">
        <%= form.label :address, class: ('active' if collection_point.address.present?) %>
        <%= form.text_field :address %>
      </div>
      <div class="input-field">
        <%= form.label :latitude, class: ('active' if collection_point.latitude.present?) %>
        <%= form.text_field :latitude %>
      </div>
      <div class="input-field">
        <%= form.label :longitude, class: ('active' if collection_point.longitude.present?) %>
        <%= form.text_field :longitude %>
      </div>
      <div class="input-field">
        <%= form.label :contact, class: ('active' if collection_point.contact.present?) %>
        <%= form.text_field :contact %>
      </div>
      <div class="input-field">
        <%= form.label :website, class: ('active' if collection_point.website.present?) %>
        <%= form.text_field :website %>
      </div>
      <div>
        <%= form.label "Materials", style: "display: block" %>
        <% @recyclable_materials.each do |material| %>
          <p>
            <label>
              <%= check_box_tag "collection_point[recyclable_material_ids][]", material.id, collection_point.recyclable_material_ids.include?(material.id), class: "filled-in", id: "collection_point_recyclable_material_ids_#{material.id}" %>
              <span><%= material.name %></span>
            </label>
          </p>
        <% end %>
      </div>
      <div>
        <%= form.submit class: "btn waves-effect waves-light" %> <%= link_to "Back to Collection Points", collection_points_path, class: "btn" %>
      </div>
    </div>
  </div>
<% end %>
