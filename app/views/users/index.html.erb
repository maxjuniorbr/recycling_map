<div class="container-fluid">
  <% if notice.present? %>
    <div class="row">
      <div class="col s12">
        <div class="card-panel green lighten-2">
          <span class="white-text"><%= notice %></span>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col s12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Users<%= link_to "New", new_user_path, class: "btn right" %></span>
        </div>
      </div>
      <div class="table-responsive bordered">
        <table class="striped">
          <thead>
            <tr>
              <th>Email</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr id="<%= dom_id user %>">
                <td><%= user.email %></td>
                <td class="right-align">
                  <%= link_to 'Show', user, class: "btn" %>
                  <%= link_to 'Edit', edit_user_path(user), class: "btn" %>
                  <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn red darken-1" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
